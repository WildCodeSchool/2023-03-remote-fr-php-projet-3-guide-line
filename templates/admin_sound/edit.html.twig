{% extends 'layout/layout-admin.html.twig' %}

{% block title %}Edit Sound{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-3">
            <a href="{{ path('app_admin_sound_index') }}">
                <i class="fas fa-arrow-left"></i>
                back to list
            </a>
            <h1>{{ sound.title }}</h1>
            <img class="img-fluid" src="{{ (sound_dir ~ '/' ~ sound.picture)|imagine_filter('sound_cover') }}" alt="{{ sound.title }}">
        </div>
        <div class="col-lg-9">
            {{ include('admin_sound/_form.html.twig', {'button_label': 'Update'}) }}

            <div class="d-flex justify-content-end mt-3">
                {{ include('admin_sound/_delete_form.html.twig') }}
            </div>
        </div>
    </div>



{% endblock %}
