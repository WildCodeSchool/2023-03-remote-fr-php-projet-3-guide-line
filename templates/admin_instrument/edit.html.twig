{% extends 'layout/layout-admin.html.twig' %}

{% block title %}Edit Instrument{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-3">
            <a href="{{ path('app_admin_instrument_index') }}">
                <i class="fas fa-arrow-left"></i>
                back to list
            </a>
            <h1>{{ instrument.name }}</h1>
            <img class="img-fluid" src="{{ (instrument_dir ~ '/' ~ instrument.picture)|imagine_filter('instrument_swiper_thumb') }}"
                 alt="{{ instrument.name }}">
        </div>
        <div class="col-lg-9">

            {{ include('admin_instrument/_form.html.twig', {'button_label': 'Update'}) }}

            <div class="d-flex justify-content-end mt-3">
                {{ include('admin_instrument/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
