{% extends 'base.html.twig' %}

{% block title %}Instrument index{% endblock %}

{% block body %}
    <div class="container">

        <h1>Instrument index</h1>

        <div class="row">
            <div class="col-lg-4 offset-lg-4">
                {{ form_start(form) }}
                {{ form_label(form.search) }}
                <div class="input-group mb-3">
                    {{ form_widget(form.search) }}
                    <a href="{{ path('app_admin_instrument_index') }}"
                       class="btn btn-secondary">
                        reset
                    </a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="d-flex flex-column align-items-center justify-content-center">
            {{ knp_pagination_render(instruments) }}
        </div>

    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Picture</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for instrument in instruments %}
            <tr>
                <td>{{ instrument.id }}</td>
                <td>{{ instrument.name }}</td>
                <td>{{ instrument.picture }}</td>
                <td>
                    <a href="{{ path('app_admin_instrument_show', {'id': instrument.id}) }}">show</a>
                    <a href="{{ path('app_admin_instrument_edit', {'id': instrument.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(instruments) }}
    </div>

    <a href="{{ path('app_admin_instrument_new') }}">Create new</a>
    </div>
{% endblock %}
